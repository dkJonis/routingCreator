<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:smartTable="sap.ui.comp.smarttable" xmlns="sap.m" controllerName="com.flexso.routingbuilder.controller.Overview" displayBlock="true">
	<App autoFocus="false">
		<pages>
			<Page title="{i18n>title}" id="overviewPage" backgroundDesign="Transparent">
				<content>
					<ObjectHeader title="Material: {params>/matnr}" number="Plant: {params>/plant}" intro="revlv: {params>/revision}" id="materialHeader" backgroundDesign="Solid" titleLevel="H3" iconDensityAware="false" condensed="true" responsive="true" fullScreenOptimized="true"/>
					<HBox fitContainer="true" displayInline="true">
						<VBox id="leftBox">
							<Button id="addWorkcenter" text="add workcenter" press="_onAddWorkcenter" type="default"/>
							<ScrollContainer vertical="true" height="85%" width="100%" headerText="Workcenters">
								<List items="{workcenter>/}" id="WorkcenterList" growingThreshold="10" headerText="Workcenters" includeItemInSelection="true" mode="SingleSelectMaster" backgroundDesign="Transparent" rememberSelections="false">
									<!--<headerToolbar> items="{list>/}"
								<Toolbar>
									<Title text="Workcenters" level="H4"/>
								</Toolbar>
							</headerToolbar>-->
									<items id="workcenters">
										<StandardListItem title="{workcenter>workplace}" description="{workcenter>description}" info="{workcenter>plant}"/>
									</items>
								</List>
							</ScrollContainer>
						</VBox>
						<VBox direction="Column" displayInline="true">
							<Table noDataText="Drop workcenters here or add a template" id="routingTable" headerText="Operations" items="{routing>/}" includeItemInSelection="true" mode="SingleSelectMaster" growingThreshold="4" growing="true">
								<columns>
									<Column id="cOperation">
										<header>
											<Label text="Operation Number" id="lblOperation"/>
										</header>
									</Column>
									<Column id="cWorkcenter">
										<header>
											<Label text="Workcenter" id="lblWorkc"/>
										</header>
									</Column>
									<Column id="cControl">
										<header>
											<Label text="Control Key" id="lblControl"/>
										</header>
									</Column>
									<Column id="cDescription">
										<header>
											<Label text="Description" id="lblDescription"/>
										</header>
									</Column>
									<Column id="baseUnit">
										<header>
											<Label text="BaseQuantity" id="lblBaseQuantity"/>
										</header>
									</Column>
									<Column id="cSetup">
										<header>
											<Label text="Setup" id="lblSetup"/>
										</header>
									</Column>
									<Column id="cMachine">
										<header>
											<Label text="Machine" id="lblMachine"/>
										</header>
									</Column>
									<Column id="cLabor">
										<header>
											<Label text="Labor" id="lblLabor"/>
										</header>
									</Column>
								</columns>
								<items id="RoutingRecords">
									<ColumnListItem id="Routings">
										<cells>
											<Text text="{routing>operationNumber}" id="operation"/>
										</cells>
										<cells>
											<Text text="{routing>workcenter}" id="workcenter"/>
										</cells>
										<cells>
											<Input value="{routing>controlKey}" id="controlKey"/>
										</cells>
										<cells>
											<TextArea value="{routing>operationDescription}" id="description"/>
										</cells>
										<cells>
											<Input value="{routing>baseQuantity}" id="baseQuantity"/>
										</cells>
										<cells>
											<Input value="{routing>setupTime}" id="setup" placeholder="..." description="{routing>setupUnit}"/>
										</cells>
										<cells>
											<Input value="{routing>machineTime}" id="machine" placeholder="..." description="{routing>machineUnit}"/>
										</cells>
										<cells>
											<Input value="{routing>laborTime}" id="labor" placeholder="..." description="{routing>laborUnit}"/>
										</cells>
									</ColumnListItem>
								</items>
								<infoToolbar>
									<Toolbar width="100%" id="__toolbar2" design="Solid">
										<content>
											<ToolbarSpacer id="__spacer0"/><Button id="btnDeleteRow" color="white" icon="sap-icon://delete" press="DeleteSelectedRecord"/>
										</content>
									</Toolbar>
								</infoToolbar>
							<customData>
							    <core:CustomData key="w5g.dt.editable" value="true" id="__data20"/>
							</customData>
							</Table>
							<CheckBox name="checkOverwrite" id="overwriteCheck" text="Overwrite existing operations"/>
							<Button id="AddTemplate" text="Add to routings" press="_onAddTemplate" type="default"/>
							<ComboBox id="comboTemplate" placeholder="Choose a template..." items="{template>/}">
								<core:ListItem key="{template>routingGroupCode}" text="0{template>routingGroupCounter} {template&gt;description}"/>
							</ComboBox>
						</VBox>
					</HBox>
				</content>
			<footer>
			    <Bar id="__bar0">
			        <contentRight>
			            <Button text="Save" id="__button0" press="_onSaveRoutings" type="Accept"/>
			            <Button text="Cancel" id="__button1" press="_onCancel" type="Reject"/>
			        </contentRight>
			    </Bar>
			</footer>
			</Page>
		</pages>
	</App>
</mvc:View>